depend() {
	use logger clock hostname
	provide cron
}

start() {
	ebegin "Starting dcron"
	/usr/sbin/crond >> /var/log/cron.log 2>&1
	eend $?
}

stop() {
	ebegin "Stopping dcron"
	start-stop-daemon --stop --quiet --pidfile /var/run/cron.pid
	local ret=$?
	rm -f /var/run/cron.pid
	eend ${ret}
}
