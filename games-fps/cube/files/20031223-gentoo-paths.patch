+char *addfullpath(char *s) {
+    static char ret[256];	// choose a reasonable max buffer size
+    if (s[0] == '/') { return s; }
+    int slen = strlen(s);
+    memset(ret, 0x00, 256);
+    memcpy(ret, GAMES_DATADIR, GAMES_DATADIR_LEN);
+    memcpy(ret+GAMES_DATADIR_LEN, s, slen);
+    return ret;
+}
+
 char *path(char *s)
 {
+    s = addfullpath(s);
     for(char *t = s; t = strpbrk(t, "/\\"); *t++ = PATHDIV);
     return s;
 };
