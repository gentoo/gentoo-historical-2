#!/bin/bash
cd "DIR"

cd_check_file() {
	local n="$1"
	local cdrom="$2"

	if [ ! -e "base/pak00${n}.pk4" ] ; then
		echo "Please copy pak00${n}.pk4 from the DOOM3 CD #${cdrom}"
		echo "to DIR/base/ and try again!"
		exit 1
	fi
}
cd_check_file 0 2
cd_check_file 1 2
cd_check_file 2 1
cd_check_file 3 3
cd_check_file 4 3

export LD_LIBRARY_PATH="${LD_LIBRARY_PATH}:."
exec ./EXE "$@"
