depend() {
	use net
}

start() {
	ebegin "Starting jftpgw"
	jftpgw
	eend $?
}

stop() {
	ebegin "Stopping jftpgw"
	kill `</var/run/jftpgw.pid`
	rm /var/run/jftpgw.pid
	eend $?
}
