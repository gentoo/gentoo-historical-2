# default: off
# $Header: /var/cvsroot/gentoo-x86/net-mail/vimap/files/uw-ipop3.xinetd,v 1.3 2004/07/18 04:05:21 dragonheart Exp $
# description: The POP3 service allows remote users to access their mail \
#              using an POP3 client such as Netscape Communicator, mutt, \
#	       or fetchmail.
service pop-3
{
	socket_type		= stream
	wait			= no
	user			= root
	server			= /usr/sbin/ipop3d
	log_on_success		+= USERID
	log_on_failure		+= USERID
	disable			= yes
}
