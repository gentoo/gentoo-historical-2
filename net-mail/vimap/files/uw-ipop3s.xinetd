# default: off
# $Header: /var/cvsroot/gentoo-x86/net-mail/vimap/files/uw-ipop3s.xinetd,v 1.1.1.1 2005/11/30 10:03:11 chriswhite Exp $
# description: The POP3 service allows remote users to access their mail \
#              using an POP3 client such as Netscape Communicator, mutt, \
#	       or fetchmail.
service pop3s
{
	socket_type		= stream
	wait			= no
	user			= root
	server			= /usr/sbin/ipop3d
	log_on_success		+= USERID
	log_on_failure		+= USERID
	disable			= yes
}
