depend() {
	need net
}

checkconfig() {
	if [ ! -e /etc/courier-imap/imapd ] ; then
		eerror "You need an /etc/courier-imap/imapd file to run courier imap"
		return 1
	fi
}

start() {
	checkconfig || return 1
	ebegin "Starting courier ssl imap"
	/usr/lib/courier-imap/imapd-ssl.rc start
	eend $?
}

stop() {
	ebegin "Stopping courier ssl imap"
	/usr/lib/courier-imap/imapd-ssl.rc stop
	eend $?
}
