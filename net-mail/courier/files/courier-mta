depend() {
	need net courier-authdaemond courier-filterd
}

start() {
	ebegin "Starting courier mta"
	/usr/sbin/courier start
	eend $?
}

stop() {
	ebegin "Stopping courier mta"
	/usr/sbin/courier stop
	eend $?
}
