#!/sbin/runscript
# Copyright 1999-2003 Gentoo Technologies, Inc.
# Distributed under the terms of the GNU General Public License, v2 or later
# /space/gentoo/cvsroot/gentoo-x86/net-mail/courier/files/courier-imapd

depend() {
	need net courier-authdaemond
}

start() {
	ebegin "Starting courier imapd"
	/usr/share/courier/imapd start
	eend $?
}

stop() {
	ebegin "Stopping courier imapd"
	/usr/share/courier/imapd stop
	eend $?
}
