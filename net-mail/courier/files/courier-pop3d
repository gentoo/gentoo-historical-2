# $Header: /var/cvsroot/gentoo-x86/net-mail/courier/files/courier-pop3d,v 1.4 2004/03/06 03:15:17 vapier Exp $

depend() {
	need net courier-authdaemond
}

start() {
	ebegin "Starting courier pop3d"
	/usr/share/courier/pop3d start
	eend $?
}

stop() {
	ebegin "Stopping courier pop3d"
	/usr/share/courier/pop3d stop
	eend $?
}
