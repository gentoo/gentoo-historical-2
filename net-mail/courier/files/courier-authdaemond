depend() {
	need net
}

start() {
	ebegin "Starting courier authdaemon"
	/usr/lib/courier/authlib/authdaemond start
	eend $?
}

stop() {
	ebegin "Stopping courier authdaemon"
	/usr/lib/courier/authlib/authdaemond stop
	eend $?
}
