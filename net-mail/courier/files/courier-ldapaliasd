depend() {
	need net courier-authdaemond
}

start() {
	ebegin "Starting courier ldapaliasd"
	/usr/sbin/courierldapaliasd start
	eend $?
}

stop() {
	ebegin "Stopping courier ldapaliasd"
	/usr/sbin/courierldapaliasd stop
	eend $?
}
