depend() {
	need net courier-authdaemond
}

start() {
	ebegin "Starting courier esmtpd-msa"
	/usr/sbin/esmtpd-msa start
	eend $?
}

stop() {
	ebegin "Stopping courier esmtpd-msa"
	/usr/sbin/esmtpd-msa stop
	eend $?
}
