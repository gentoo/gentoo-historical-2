# /space/gentoo/cvsroot/gentoo-x86/net-mail/courier/files/courier

depend() {
	need net courier-authdaemond courier-mta courier-esmtpd courier-esmtpd-ssl courier-imapd courier-imapd-ssl courier-pop3d courier-pop3d-ssl
}

start() {
	ebegin "Courier MTA started"
	eend $?
}

stop() {
	ebegin "Stopping Courier MTA"
	/etc/init.d/courier-authdaemond stop
	eend $?
}
