#!/sbin/runscript

PIDFILE=/var/spool/postfix/pid/master.pid

depend() {
    need net
    use sysklogd metalog syslog-ng
}

start() {
    ebegin "Starting postfix"
    /usr/sbin/postfix start >/dev/null 2>&1
    eend $?
}

stop() {
    ebegin "Stopping postfix"
    /usr/sbin/postfix stop >/dev/null 2>&1
    eend $?
}
