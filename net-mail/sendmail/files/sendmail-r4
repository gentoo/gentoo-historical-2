# $Header: /var/cvsroot/gentoo-x86/net-mail/sendmail/files/sendmail-r4,v 1.1 2003/01/27 07:15:00 raker Exp $

. /etc/conf.d/sendmail

depend() {
	need net
	use logger
}

start() {
	ebegin "Starting sendmail"
	/usr/bin/newaliases > /dev/null 2>&1
	(cd /var/spool/mqueue; rm -f xf*)
	/usr/sbin/sendmail ${SENDMAIL_OPTS} > /dev/null 2>&1
	/usr/sbin/sendmail ${CLIENTMQUEUE_OPTS} > /dev/null 2>&1
	eend $?
}

stop() {
	ebegin "Stopping sendmail"
	killall ${KILL_OPTS} /usr/sbin/sendmail
	eend $?
}
