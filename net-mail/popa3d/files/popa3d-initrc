depend() {
	need net
}

start() {
	ebegin "Starting popa3d"
	start-stop-daemon --start --quiet --exec /usr/sbin/popa3d -- -D
	eend $?
}

stop() {
	ebegin "Stopping popa3d"
	start-stop-daemon --stop --quiet --exec /usr/sbin/popa3d
	eend $?
}
