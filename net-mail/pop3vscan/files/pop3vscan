# $Header: /var/cvsroot/gentoo-x86/net-mail/pop3vscan/files/pop3vscan,v 1.3 2004/03/06 03:19:44 vapier Exp $

depend() {
	need net
}

start() {
	ebegin "Starting pop3vscan"
	start-stop-daemon --start --quiet --pidfile /var/run/pop3vscan.pid --exec /usr/sbin/pop3vscan
	eend $?
}

stop() {
	ebegin "Stopping pop3vscan"
	start-stop-daemon --stop --quiet --oknodo --pidfile /var/run/pop3vscan.pid
	eend $?
}

restart() {
	ebegin "Restarting pop3vscan"
	svc_stop
	sleep 1
	svc_start
	eend $?
}
