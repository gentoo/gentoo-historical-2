SERVICE=vm-pop3d

opts="start stop restart"


start() {
		ebegin "Starting $SERVICE..."
     		/usr/sbin/vm-pop3d $OPTS
}

stop() {
		ebegin "Stopping $SERVICE..."
		killall -15 /usr/sbin/vm-pop3d
}

restart() {
		stop
		start
}

