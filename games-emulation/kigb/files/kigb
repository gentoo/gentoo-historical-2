# $Header: /var/cvsroot/gentoo-x86/games-emulation/kigb/files/kigb,v 1.2 2004/05/30 00:54:33 mr_bones_ Exp $

kigb_dir="${HOME}/.kigb"

if [ ! -d "${kigb_dir}" ] ; then
	mkdir -p "${kigb_dir}"
	cd "${kigb_dir}"
	mkdir cfg inp rom save snap state
	ln -s /opt/kigb/kigb kigb
fi

cd "${kigb_dir}"
exec ./kigb "$@"
