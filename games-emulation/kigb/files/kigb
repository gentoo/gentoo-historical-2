kigb_dir="${HOME}/.kigb"

if [ ! -d "${kigb_dir}" ] ; then
	mkdir -p "${kigb_dir}"
	cd "${kigb_dir}"
	mkdir cfg inp rom save snap state
	ln -s GENTOODIR/kigb/kigb kigb
fi

cd "${kigb_dir}"
exec ./kigb "$@"
