# $Header: /var/cvsroot/gentoo-x86/games-emulation/visualboyadvance/files/visualboyadvance,v 1.3 2004/04/12 00:57:03 mr_bones_ Exp $

PN=VisualBoyAdvance
if ! [ -d ~/.${PN}/save ]; then
	mkdir -p ~/.${PN}/save
	cd ~/.${PN}
	ln -s `which ${PN}` .
	cp /usr/share/games/${PN}/${PN}.cfg .
	sed -i \
	    -e "s:#saveDir.*:saveDir ${HOME}/.${PN}/save:" \
	    -e "s:#captureDir.*:captureDir ${HOME}/.${PN}:" \
	    -e "s:#batteryDir.*:batteryDir ${HOME}/.${PN}/save:" \
	    ${PN}.cfg
fi

cd ~/.${PN}
exec ./${PN} "$@"
