#! /bin/sh

# Run some script

SCRIPT="/usr/sbin/eupdatedb"

DATE="`date +%Y%m%d`"
LOG="/var/log/${SCRIPT}"

# Start logging
echo "--- Starting ${SCRIPT} for ${DATE} ---" >> ${LOG}

${SCRIPT} --quiet && \
echo "${SCRIPT}: success." >> ${LOG} || \
echo "ERROR: ${SCRIPT} failed." >> ${LOG}

# End logging
echo "--- Ending ${SCRIPT} for ${DATE} ---" >> ${LOG}
