#!/sbin/runscript

depend() {
	need net
	use logger
        before mta
}

start() {
	ebegin "Starting amavisd-new"
	start-stop-daemon --start --quiet --exec /usr/sbin/amavisd
	eend $?
}

stop() {
	ebegin "Stopping amavisd-new"
	start-stop-daemon --stop --quiet --pidfile /var/run/amavis/amavisd.pid
	eend $?
}
