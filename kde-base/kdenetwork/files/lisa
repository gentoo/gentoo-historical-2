depend() {
    use net
}

start() {

    ebegin "Starting lisa"
    start-stop-daemon --start -x _KDEDIR_/bin/lisa -q -- $LISACONF 1>/dev/null
    eend $? "Failed to start lisa"

}

stop() {

    ebegin "Stopping lisa"
    start-stop-daemon --stop -x _KDEDIR_/bin/lisa -q
    eend $? "Failed to stop lisa"

}
