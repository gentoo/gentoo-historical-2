depend() {
	need net
}

start() {
	ebegin "Starting plb"
	start-stop-daemon --start --quiet --exec /usr/bin/plb -- --daemonize --config=/etc/plb.conf
	eend $?
}

stop() {
	ebegin "Stopping plb"
	start-stop-daemon --stop --quiet --pidfile /var/run/plb.pid
	eend $?
}
