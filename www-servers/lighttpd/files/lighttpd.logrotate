# lighttpd logrotate script for Gentoo

/var/log/lighttpd/*.log {
        daily
        missingok
		copytruncate
        rotate 7
        compress
        notifempty
        sharedscripts
        postrotate
           if [ -f /var/run/lighttpd.pid ]; then \
                /etc/init.d/lighttpd restart > /dev/null 2>&1 || true ; \
           fi;
        endscript
}
