depend() {
	need net
}

start() {
	ebegin "Starting varnish"
	start-stop-daemon --quiet --start --pidfile /var/run/varnishd.pid --exec /usr/sbin/varnishd -- ${VARNISHD_OPTS}
	eend $?
}

stop() {
	ebegin "Stopping varnish"
	start-stop-daemon --quiet --stop --pidfile /var/run/varnishd.pid
	eend $?
}
