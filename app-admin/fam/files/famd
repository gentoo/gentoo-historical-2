depend() {

	need portmap

}

start() {

	ebegin "Starting famd"
	start-stop-daemon --start --quiet --exec /usr/sbin/famd \
		-- -T 0 -c /etc/fam.conf
	eend $?

}

stop() {

	ebegin "Stopping famd"
	start-stop-daemon --stop --quiet --exec /usr/sbin/famd
	eend $?

}
