start() {
	ebegin "Starting verynice"
	/usr/sbin/verynice -d /var/run/verynice.pid
	eend $?
}

stop() {
	ebegin "Stopping verynice"
	start-stop-daemon --stop --quiet --pidfile=/var/run/verynice.pid
	eend $?
}
