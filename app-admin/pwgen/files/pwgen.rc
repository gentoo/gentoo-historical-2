depend() {
	before local
}

start() {
	ebegin "Auto-scrambling root password for security"
	echo root:\`pwgen -s 16\` | chpasswd  > /dev/null 2>&1
	eend $? "Failed to scramble root password."
}

stop() {
	ebegin "Stopping pwgen"
	eend $? "Failed to stop pwgen."
}
