depend() {
	need localmount
	use logger
}

start() {
	ebegin "Starting watchdog"
	[ ! -e /dev/watchdog ] && eend 1 "/dev/watchdog not found"
	start-stop-daemon --start --quiet --exec /usr/sbin/watchdog
	eend $?
}

stop() {
	ebegin "Stopping watchdog"
	start-stop-daemon --stop --quiet --exec /usr/sbin/watchdog
	eend $?
}
