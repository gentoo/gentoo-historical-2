depend() {
	need portmap
}

start() {
	ebegin "Starting fam"
	start-stop-daemon --start --quiet --exec /usr/bin/fam --background \
		-- -T 0 -c /etc/fam.conf
	eend $?
}

stop() {
	ebegin "Stopping fam"
	start-stop-daemon --stop --quiet --exec /usr/bin/fam
	eend $?
}
