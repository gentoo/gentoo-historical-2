depend() {
	need net
}

start() {
	ebegin "Starting Usermin"
	/usr/sbin/usermin start --pidfile /var/run/usermin.pid
	eend $?
}

stop() {
	ebegin "Stopping Usermin"
	/usr/sbin/usermin stop --pidfile /var/run/usermin.pid
	eend $?
}
