depend() {
	need localmount 
}

start() {
	ebegin "Starting hddtemp daemon"
	/sbin/start-stop-daemon --start --quiet --name hddtemp  \
	--exec ${HDDTEMP_EXEC} -- -d ${HDDTEMP_OPTS}

	eend $?
}

stop() {
	ebegin "Stopping hddtemp daemon"
	start-stop-daemon --stop --quiet --name hddtemp
	eend $?
}


