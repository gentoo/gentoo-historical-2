depend() {
	need localmount net
}

start() {
	ebegin "Starting hddtemp daemon"
	/sbin/start-stop-daemon --start --quiet --exec ${HDDTEMP_EXEC} \
	-- -d ${HDDTEMP_OPTS} ${HDDTEMP_DRIVES}
	eend $?
}

stop() {
	ebegin "Stopping hddtemp daemon"
	start-stop-daemon --stop --quiet --exec ${HDDTEMP_EXEC}
	eend $?
}


