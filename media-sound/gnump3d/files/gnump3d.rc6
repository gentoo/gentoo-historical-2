depend() {
	need net
}

start() {
	ebegin "Starting gnump3d"
	start-stop-daemon --start --quiet --exec /usr/bin/mp3d -- --quiet &
	eend $?
}

stop() {
	ebegin "Stopping gnump3d"
	start-stop-daemon --stop --quiet --exec /usr/bin/mp3d
	eend $?
}
