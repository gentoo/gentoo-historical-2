 #
 PREFIX = /usr
 
-CFLAGS = -Wall -O2 -g \
-         `imlib-config --cflags` -DHAVE_IMLIB \
-         `gtk-config --cflags`
+BUILDC = $(CFLAGS) -fno-strict-aliasing -Wall \
+	`imlib-config --cflags` -DHAVE_IMLIB \
+	`gtk-config --cflags`
 
 INC_DIRS =
 
 LIBS = -lY2 `imlib-config --libs` `gtk-config --libs`
 LIB_DIRS =
 
-CC = cc
-CPP = c++
+CC = gcc
+CXX = g++
 
 # Appended stuff starts here
 #
 
