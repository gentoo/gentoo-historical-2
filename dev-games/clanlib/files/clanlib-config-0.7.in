VERSION=@VERSION@

if [ ! "`ls /usr/lib/clanlib-* 2> /dev/null`" ] ; then
	echo "No installed versions of ClanLib detected!"
	exit 1
fi

showusage() {
	echo "Usage: clanlib-config [options]"
	echo "Options: "
	echo "   [--libs]"
	echo "   [--version]"
}

[ -z "${1}" ] && showusage

case ${1} in
	--lib-path)
		echo /usr/lib/clanlib-${VERSION}
		;;
	--version)
		echo ${VERSION}
