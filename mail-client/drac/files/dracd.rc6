depend() {
	need net portmap
}

start() {
	ebegin "Starting dracd"
	start-stop-daemon --start --quiet --exec /usr/sbin/dracd \
		-- -i -e 5 /var/lib/drac/drac.db
	eend $?
}

stop() {
	ebegin "Stopping dracd"
	start-stop-daemon --stop --quiet --exec /usr/sbin/dracd
	eend $?
}
