depend() {
	need net
	use mysql
}

start() {
	ebegin "Starting apache"
	/usr/local/apache2/bin/httpd -k start ${APACHE_OPTS}
	eend $?
}

stop() {
	ebegin "Stopping apache"
	/usr/local/apache2/bin/httpd -k stop ${APACHE_OPTS}
	eend $?
}
