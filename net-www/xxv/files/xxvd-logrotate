/var/log/xxv/xxvd.log {
	compress
	daily
	dateext
	maxage 365
	rotate 99
	size=+4096k
	notifempty
	missingok
	copytruncate
}

/var/log/xxv/xxvd_mplayer.log {
	compress
	daily
	dateext
	maxage 365
	rotate 99
	size=+4096k
	notifempty
	missingok
	copytruncate
}
