depend() {
	need net
	use mysql
}

start() {
	ebegin "Starting apache"
	start-stop-daemon --quiet --start --exec /usr/sbin/httpd -- ${HTTPD_OPTS}
	eend $?
}

stop() {
	ebegin "Stopping apache"
	start-stop-daemon --quiet --stop --pid /var/run/httpd.pid
	eend $?
}
