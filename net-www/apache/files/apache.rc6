depend() {
	need net
	use mysql
}

start() {
	ebegin "Starting apache"
	start-stop-daemon --quiet --start --startas /usr/sbin/apache \
		--pidfile /var/run/apache.pid -- ${APACHE_OPTS}
	eend $?
}

stop() {
	ebegin "Stopping apache"
	start-stop-daemon --quiet --stop --pidfile /var/run/apache.pid
	eend $?
}
