# $Header: /var/cvsroot/gentoo-x86/net-www/wwwoffle/files/wwwoffled-online,v 1.4 2003/02/14 23:11:09 vapier Exp $

depend() {
    need wwwoffled net
}

start() {
    ebegin "Starting wwwoffled-online"
    wwwoffle -online
    eend $?
}

stop() {
    ebegin "Stopping wwwoffled-online"
    wwwoffle -offline
    eend $?
}

