depend() {
	need net
}

start() {
	checkconfig || return 1

	ebegin "Starting venus"
	start-stop-daemon --start --quiet --exec /usr/sbin/venus --background
	eend $?
}

stop() {
	ebegin "Stopping venus"
	start-stop-daemon --stop --quiet --exec /usr/sbin/venus
	umount -l coda &>/dev/null
	eend $?
}
