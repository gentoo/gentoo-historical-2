depend() {
	need net portmap
}

start() {
	ebegin "Starting SFS client daemon"
	start-stop-daemon --start --quiet --exec /sbin/sfscd 1>&2
	eend $?
}

stop() { 
	ebegin "Stopping SFS client daemon"
	start-stop-daemon --stop --quiet --exec /sbin/sfscd 1>&2
	eend $?
}
