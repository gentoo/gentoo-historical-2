depend() {
	need net
}

start() {
	ebegin "Starting winbind"
	start-stop-daemon --start --quiet --exec /usr/sbin/winbindd
	eend $?
}

stop() {
	ebegin "Stopping winbind"
	start-stop-daemon --stop --quiet --oknodo --exec /usr/sbin/winbindd
	eend $?
}
