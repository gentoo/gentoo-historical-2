depend() {
	use logger
	need portmap
	before nfs nfs-mount autofs
}

start() {
	ebegin "Starting keyserv"
	/usr/sbin/keyserv
	eend $?
}

stop() {
	ebegin "Stopping keyserv"
	start-stop-daemon --stop --exec /usr/sbin/keyserv
	eend $?
}
