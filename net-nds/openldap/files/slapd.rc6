depend() {
	need net
}

start() {
	ebegin "Starting ldap-server"
	start-stop-daemon --start --quiet --exec /usr/lib/openldap/slapd
	eend $?
}

stop() {
	ebegin "Stopping ldap-server"
	start-stop-daemon --stop --quiet --exec /usr/lib/openldap/slapd
	eend $?
}
