depend() {
	need net
}

start() {
	ebegin "Starting slurpd"
	start-stop-daemon --start --quiet --exec /usr/lib/openldap/slurpd
	eend $?
}

stop() {
	ebegin "Stopping slurpd"
	start-stop-daemon --stop --quiet --exec /usr/lib/openldap/slurpd
	eend $?
}
