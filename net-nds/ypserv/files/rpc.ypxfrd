depend() {
	need net portmap ypserv
}

start() {
	ebegin "Starting rpc.yppasswdd"
	start-stop-daemon --start --quiet --exec /usr/sbin/rpc.ypxfrd
	eend $?
}

stop() {
	ebegin "Stopping rpc.yppasswdd"
	start-stop-daemon --stop --quiet --exec /usr/sbin/rpc.ypxfrd
	eend $?
}
