depend() {
	need net
	before upsd
}

start() {
	ebegin "Starting UPS drivers"
	/sbin/upsdrvctl start
	eend $? "Failed to start UPS drivers!"
}

stop() {
	ebegin "Stopping UPS drivers"
	/sbin/upsdrvctl stop
	eend $? "Failed to stop UPS drivers!"
}
