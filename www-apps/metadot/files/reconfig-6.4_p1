#!/bin/bash
if [ $1 = "install" ]; then
	sed -e "s|/home/metadot/metadot|${MY_INSTALLDIR}|g" -i ${MY_INSTALLDIR}/etc/metadot.conf
	# fix Apache configs
	sed -e "s|ROOTDIR|${MY_INSTALLDIR}|g
		s|VHOST|${VHOST_HOSTNAME}|" -i ${MY_SERVERCONFIGDIR}/metadot.conf
	
elif [ $1 = "clean" ]; then
	echo $1
fi
