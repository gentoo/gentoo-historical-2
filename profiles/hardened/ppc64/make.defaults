ARCH="ppc64"
ACCEPT_KEYWORDS="${ARCH}"
USE="${ARCH} berkdb crypt dlloader hardened pam pic readline ssl zlib"
PORTDIR=/usr/portage/
PKGDIR=${PORTDIR}/packages/${ARCH}/

# ppc64
CHOST="powerpc64-unknown-linux-gnu"
CFLAGS="-O2 -pipe -fforce-addr"
CXXFLAGS="${CFLAGS}"
FEATURES="-sandbox"
