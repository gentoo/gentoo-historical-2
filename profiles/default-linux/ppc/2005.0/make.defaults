ARCH="ppc"
ACCEPT_KEYWORDS="ppc"

CHOST="powerpc-unknown-linux-gnu"
CFLAGS="-O2 -fno-strict-aliasing -pipe"
CXXFLAGS="${CFLAGS}"

FEATURES="sandbox sfperms"

STAGE1_USE="unicode"
GRP_STAGE23_USE="berkdb gpm ipv6 ncurses nls pam perl python readline ssl tcpd unicode"

USE="alsa berkdb bitmap-fonts crypt cups emboss fortran gif gnome gpm gtk gtk2 ipv6 jpeg kde libwww mp3 motif mpeg ncurses nls oggvorbis opengl pam pdflib perl png python qt readline spell ssl tcpd truetype truetype-fonts type1-fonts X xprint xml2 xv unicode zlib"
