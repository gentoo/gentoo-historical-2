CXXFLAGS="${CFLAGS}"

FEATURES="sandbox sfperms"

STAGE1_USE="nptl unicode"
USE="${STAGE1_USE} berkdb crypt ipv6 ncurses nls pam perl python readline ssl tcpd zlib"
