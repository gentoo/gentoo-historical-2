ARCH="sparc"

# Even though this is a 64bit kernel, we use a 32-bit userland (v9)
CHOST="sparc-unknown-linux-gnu"

# What ctargets do we want from binutils
CTARGETS_BINUTILS="sparc-unknown-linux-gnu sparc64-unknown-linux-gnu"

# Used in ebuilds for verifying sparc64 profile
PROFILE_ARCH="sparc64"

# Compiler flags
CFLAGS="-O2 -pipe"
CXXFLAGS=${CFLAGS}

# Misc
FEATURES="sandbox ccache"
ACCEPT_KEYWORDS="sparc"

# USE settings
USE="alsa arts avi berkdb bitmap-fonts crypt cups encode esd fortran f77 fbcon foomaticdb gdbm gcc64 gif gtk gtk2 gnome imlib jack jpeg kde libwww mad mikmod motif mpeg ncurses nls oggvorbis oss opengl pam perl png python pdflib qt readline sdl spell ssl tcpd truetype X xv xml2 xmms zlib"

# Catalyst stage/grp USE
GRP_STAGE23_USE="berkdb gpm gcc64 gtk2 ipv6 ncurses nls pam perl python readline ssl tcpd"
