ARCH="sparc"
ACCEPT_KEYWORDS="${ARCH}"
# Used in ebuilds for verifying sparc64 profile
PROFILE_ARCH="sparc64"

CHOST="sparc64-unknown-linux-gnu"
PLATFORM="sparc64-unknown-linux-gnu"

# Compiler flags
CFLAGS="-O2 -pipe"
CXXFLAGS=${CFLAGS}

# Misc
FEATURES="sandbox ccache autoconfig"

# Catalyst stage/grp USE
GRP_STAGE23_USE="berkdb gpm ipv6 -java multilib ncurses nls -nptl pam perl python readline ssl tcpd zlib"

# Sane, minimal USE settings
USE="${GRP_STAGE23_USE} alsa bitmap-fonts crypt cups fortran f77 fbcon gif jpeg nls png tiff truetype usb xpm xrandr xv"

CONF_LIBDIR="lib64"
CONF_MULTILIBDIR="lib32"

