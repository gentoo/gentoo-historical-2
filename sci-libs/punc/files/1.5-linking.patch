-dnl     [${arpack_lib_path}-larpack ${blas_lib} -lvf2c])
+dnl     [${arpack_lib_path}-larpack ${blas_lib}])
 dnl if test -z "${arpack_use}"; then
 dnl     AC_MSG_RESULT([** ARPACK library missing ...will BUILD **])
 dnl     arpack="arpack";
@@ -691,7 +693,7 @@ dnl cgcode_use="";
