-dnl     [${cgcode_lib_path}-lcgcode ${blas_lib} -lvf2c])
+dnl     [${cgcode_lib_path}-lcgcode ${blas_lib}])
 dnl if test -z "${cgcode_use}"; then
 dnl     AC_MSG_RESULT([** CGCODE library missing ...will BUILD **])
 dnl     cgcode="cgcode";
@@ -747,7 +749,7 @@ dnl pmg_use="";
