start() {
	ebegin "Starting midentd"
	/usr/sbin/midentd ${MIDENTD_OPTS}
	eend $?
}

stop() {
	ebegin "Stopping midentd"
	start-stop-daemon --stop --quiet --pidfile /var/run/midentd.pid
	local ret=$?
	rm -f /var/run/midentd.pid
	eend ${ret}
}
