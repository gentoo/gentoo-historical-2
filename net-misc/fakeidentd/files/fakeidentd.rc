depend() {
	need net
}

start() {
	ebegin "Starting fakeidentd"
	fakeidentd ${FAKEIDENTD_OPTS}
	eend $?
}

stop() {
	ebegin "Stopping fakeidentd"
	killall fakeidentd
	eend $?
}
