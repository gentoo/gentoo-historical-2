depend() {
	need net
}

start() {
	ebegin "Starting timed"
	start-stop-daemon --start --quiet --exec /usr/sbin/timed
	eend $?
}

stop() {
	ebegin "Stopping timed"
	start-stop-daemon --stop --quiet --exec /usr/sbin/timed
	eend $?
}
