depend() {
	need net logger
	after zaptel
}

start() {
	ebegin "Starting asterisk PBX"
	start-stop-daemon --start --exec /usr/sbin/asterisk -- ${OPTIONS}
	eend $?
}

stop() {
	ebegin "Stopping asterisk PBX"
	start-stop-daemon --stop --pidfile /var/run/asterisk.pid
	eend $?
}
