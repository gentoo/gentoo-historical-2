depend() {
	need net
	after zaptel
}

start() {
	ebegin "Starting asterisk PBX"
	/usr/sbin/asterisk ${OPTIONS}
	eend $?
}

stop() {
	ebegin "Stopping asterisk PBX"
	/usr/sbin/asterisk -r -x "STOP NOW" 2>/dev/null
	eend $?
}
