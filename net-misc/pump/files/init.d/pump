# $Header: /var/cvsroot/gentoo-x86/net-misc/pump/files/init.d/pump,v 1.1 2002/01/09 11:42:08 hallski Exp $

start() {
	ebegin "Starting pump"

	/sbin/pump -h `hostname`

	eend
}

stop() {
	ebegin "Stopping pump"

	pump --kill

	eend
}
