depend() {
	need net
	use logger
}

start() {
	ebegin "Starting dhcrelay"
	start-stop-daemon --start --quiet --exec /usr/sbin/dhcrelay \
		-- -q -i ${IFACE} ${DHCRELAY_OPTS} \
        	${DHCRELAY_SERVERS}
	eend $?
}

stop() {
	ebegin "Stopping dhcrelay"
	start-stop-daemon --stop --quiet --pidfile /var/run/dhcp/dhcrelay.pid
	eend $?
}
