depend() {
	need net upsdrv
	before upsmon
}

start() {
	ebegin "Starting upsd"
	# clean up first
	pkill -u root -x upsd
	sleep 1s
	rm -f /var/state/nut/upsd.pid
	# now start up
	start-stop-daemon --start --quiet --exec /usr/sbin/upsd
	eend $?
}

stop() {
	ebegin "Stopping upsd"
	start-stop-daemon --stop --quiet --pidfile /var/lib/nut/upsd.pid
	eend $?
}
