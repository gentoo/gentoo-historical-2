depend() {
	need net
	use mysql
}

checkconfig() {
	local HOME="`getent passwd ${ENTROPY_USER} | cut -d: -f 6`"
	if [ ! -d ${HOME} ] ; then
		mkdir -p ${HOME}
		chown ${ENTROPY_USER} ${HOME}
	fi
	cd ${HOME}
}

start() {
	checkconfig || return 1
	ebegin "Starting entropy"
	su - ${ENTROPY_USER} -c entropy
	eend $?
}

stop() {
	ebegin "Stopping entropy"
	entropy --kill
	eend $?
}
