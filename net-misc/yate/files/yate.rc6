depend() {
    need net
}

start() {
    ebegin "Starting YATE"
    start-stop-daemon --start --exec /usr/bin/yate -- -d -p /var/run/yate.pid ${OPTS}
    eend $?
}

stop() {
    ebegin "Stopping YATE"
    start-stop-daemon --stop --pidfile=/var/run/yate.pid
    eend $?
}
