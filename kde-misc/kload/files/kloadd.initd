depend() {
	use net
}

start() {
	ebegin "Starting kloadd"
	start-stop-daemon --start --quiet --exec /usr/sbin/kloadd -- ${PORT} ${BIND} >/dev/null
	eend $?
}

stop() {
	ebegin "Stopping kloadd"
	start-stop-daemon --stop --quiet --exec /usr/sbin/kloadd --retry 10
	eend $?
}
