diff -urN entrance/config/init.d/entrance.in entrance.new/config/init.d/entrance.in
--- entrance/config/init.d/entrance.in	1969-12-31 19:00:00.000000000 -0500
+++ entrance.new/config/init.d/entrance.in	2003-01-31 16:57:04.000000000 -0500
@@ -0,0 +1,39 @@
+#!/bin/sh 
+#
+# Originally based on: gdm /etc/init.d script on debian
+#
+# THIS DOESN'T WORK YET atmos - May 6, 2002
+# THIS DOES WORK ! atmos - May 27, 2002
+
+set -e
+
+# HEED_DEFAULT_DISPLAY_MANAGER to "false."
+PATH=/sbin:/bin:/usr/sbin:/usr/bin:@prefix@/sbin:@prefix@/bin
+DAEMON=@prefix@/sbin/entranced
+PIDFILE=/var/run/entranced.pid
+
+test -x $DAEMON || exit 0
+
+case "$1" in
+  start)
+	echo -n "Becoming entranced: entrance"
+	$DAEMON
+	echo "."
+  ;;
+  stop)
+	echo -n "Stopping Entrance: entrance"
+	kill -9 `cat $PIDFILE` 
+	echo "."
+  ;;
+  restart)
+	$0 stop
+	$0 start
+  ;;
+  *)
+	echo "Usage: $0 {start|stop|restart}"
+	exit 1
+  ;;
+esac
+
+exit 0
+
