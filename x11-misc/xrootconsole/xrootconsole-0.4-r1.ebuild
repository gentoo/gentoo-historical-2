LICENSE="GPL-2"
SLOT="0"
KEYWORDS="x86 ~sparc "

DEPEND="x11-base/xfree"

src_compile() {
	epatch ${FILESDIR}/${P}.parse-color.patch
	emake || die "emake failed"
}

src_install() {
	dodir /usr/bin
	make BINDIR=${D}usr/bin/ install || die "install failed"
}
