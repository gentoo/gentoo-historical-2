depend() {
	after coldplug
	need dbus localmount hostname
}

start() {
   	ebegin "Udev coldplug of bluetooth devices"
	udevadm trigger --subsystem-match=bluetooth --action=add
	eend $?
}

stop() {
	return 0
}
