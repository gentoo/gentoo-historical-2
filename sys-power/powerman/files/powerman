depend() {
	need net
}

start() {
	ebegin "Starting powermand"
	start-stop-daemon --start --exec /usr/sbin/powermand
	eend $?
}

stop() {
	ebegin "Stopping powermand"
	start-stop-daemon --stop --exec /usr/sbin/powermand
	eend $?
}
