+dnl gstreamer checking
+
+AC_ARG_ENABLE(gstreamer,
+		AC_HELP_STRING([--enable-gstreamer],[use GStreamer for sound preview]),
+	[case "${enableval}" in
+	yes) ENABLE_GST=yes ;;
+        no)  ENABLE_GST=no ;;
