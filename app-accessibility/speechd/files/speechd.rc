depend() {
	need festival
}

start() {
	ebegin "Starting speechd"
	start-stop-daemon --start --quiet --exec /usr/bin/speechd -- -Q
	eend $?
}

stop() {
	ebegin "Stopping speechd"
	start-stop-daemon --stop --quiet --pidfile /var/run/speechd.pid
	eend $?
}
