depend() {
	use alsasound esound
}

start() {
	ebegin "Starting speechd-up"
	start-stop-daemon --start --quiet --background --exec /usr/bin/speechd_up -- -d
	eend $?
}

stop() {
	ebegin "Stopping speechd-up"
	start-stop-daemon --stop --quiet --pidfile /var/run/speechd-up.pid
	eend $?
}
