depend() {
	use alsasound esound
}

start() {
	ebegin "Starting epos"
	start-stop-daemon --start --quiet --background --make-pidfile --pidfile /var/run/epos.pid \
		--exec /usr/bin/epos -- -f
	eend $?
}

stop() {
	ebegin "Stopping epos"
	start-stop-daemon --stop --quiet --pidfile /var/run/epos.pid
	eend $?
}
