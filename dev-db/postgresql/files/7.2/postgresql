depend() {
	need net
}

start()	{
	ebegin "Starting postgres"
	start-stop-daemon  --start --quiet --background --chuid postgres --exec \
		/usr/bin/postmaster -- -D/var/lib/postgresql/data -N 1024 -B 2048
	eend $?
}

stop ()	{
	ebegin "Stopping postgres"
	start-stop-daemon --stop --quiet --pidfile=/var/lib/postgresql/data/postmaster.pid
	eend $?
}
