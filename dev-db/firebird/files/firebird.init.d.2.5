depend() {
	need net
}

start(){
	ebegin "Starting Firebird server"
	start-stop-daemon --start --pidfile $PIDFILE --user $FBUSER --group $FBGROUP --exec $FBGUARD -- $FB_OPTS
	eend $?
}

stop(){
	ebegin "Stopping Firebird server"
	start-stop-daemon --stop --name fbguard
	eend $?
}

restart(){
	svc_stop
	sleep 1
	svc_start
}

