depend() {
	use net pgreplicate pgcluster
}

start() {
	ebegin "Starting PGCluster Load Balance"
	su - $PGUSER -c "/usr/bin/pglb -D /etc/pgcluster"

}

stop() {
	ebegin "Stopping PGCluster Load Balance"
	su - $PGUSER -c "/usr/bin/pglb -D /etc/pgcluster stop"
	eend $?
}
