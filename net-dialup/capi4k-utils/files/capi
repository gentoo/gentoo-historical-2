# $Header: /var/cvsroot/gentoo-x86/net-dialup/capi4k-utils/files/capi,v 1.1 2002/08/09 12:49:17 verwilst Exp $

depend() {

    after isapnp

}

start() {

        [ -e /etc/capi.conf ] || {
                eerror "You're missing /etc/capi.conf (comes with a capi-driver)."
                eerror "Emerge net-dialup/fcpci if you are having an AVM Fritz!Card PCI"
                return 1
        }
        /sbin/capiinit start
        eend 0

}

stop() {

        /sbin/capiinit stop
        eend $?

}

