depend() {
	after isapnp
}

start() {
	if [ ! -e /etc/capi.conf ] ; then
		eerror "You're missing /etc/capi.conf (comes with a capi-driver)."
		eerror "Emerge net-dialup/fcpci if you are having an AVM Fritz!Card PCI"
		return 1
	fi
	ebegin "Starting CAPI"
	/sbin/capiinit start
	eend $?
}

stop() {
	ebegin "Stopping CAPI"
	/sbin/capiinit stop
	eend $?
}
