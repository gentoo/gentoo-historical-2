depend() {
	need net
}

start() {
	ebegin "Starting l2tpd"
	start-stop-daemon --start --quiet --exec /usr/sbin/l2tpd
	eend $?
}

stop() {
	ebegin "Stopping l2tpd"
	start-stop-daemon --stop --quiet --pidfile /var/run/l2tpd.pid
	eend $?
}
