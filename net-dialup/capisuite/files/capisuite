# $Header: /var/cvsroot/gentoo-x86/net-dialup/capisuite/files/capisuite,v 1.1 2003/11/27 15:42:44 brandy Exp $

depend() {
	need capi
}

start() {
	ebegin "Starting capisuite"
	start-stop-daemon --start --quiet --pidfile /var/run/capisuite.pid --exec /usr/sbin/capisuite -- -d
	eend $?
}

stop() {
	ebegin "Stopping capisuite"
	killall -9 capisuite
	eend $?
}
