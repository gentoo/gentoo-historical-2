depend() {
	need net
}

start() {
	ebegin "Starting bpalogin"
	/usr/sbin/bpalogin -c /etc/bpalogin.conf
	eend $?
}

stop() {
	ebegin "Stopping bpalogin"
	killall -9 bpalogin
	eend $?
}
