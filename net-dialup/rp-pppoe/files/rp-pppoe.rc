depend() {
	use net
	after domainname
}

start() {
	ebegin "Starting adsl"
	start-stop-daemon --start --quiet --exec /usr/sbin/adsl-start
	eend $?
}

stop() {
	ebegin "Stopping adsl"
	start-stop-daemon --start --quiet --exec /usr/sbin/adsl-stop
	eend $?
}
