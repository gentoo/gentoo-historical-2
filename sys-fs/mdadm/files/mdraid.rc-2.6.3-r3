depend() {
	if [ -e /lib/librc.so ]; then
		# on baselayout-1 this could cause
		# dependency-cycles with checkroot (before *)
		before checkfs fsck
	fi
}

start() {
	if [ ! -e /lib/librc.so ]; then
		eerror "The ${SVCNAME} init script is written for baselayout-2"
		eerror "Please do not use it with baselayout-1"
		return 1
	fi

	start_addon raid
}

stop() {
	stop_addon raid
}
