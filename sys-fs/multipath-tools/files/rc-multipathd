depend() {
	need localmount
}

start() {
	ebegin "Starting multipathd"
	start-stop-daemon --start --quiet --exec /usr/sbin/multipathd
	eend $?
}

stop() {
	ebegin "Stopping multipathd"
	start-stop-daemon --stop --quiet --pid /var/run/multipathd.pid
	eend $?
}
