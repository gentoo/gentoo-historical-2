depend() {
	need net
	use dns
}

start() {
	ebegin "Starting bareos storage daemon"
	start-stop-daemon --start --quiet --exec /usr/sbin/bareos-sd \
		-- ${SD_OPTIONS}
	eend $?
}

stop() {
	ebegin "Stopping bareos storage daemon"
	start-stop-daemon --stop --quiet --pidfile /run/bareos-sd.*.pid 
	eend $?
}
