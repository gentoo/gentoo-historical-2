depend() {
	need net
	if [ ${LOCAL_DB} -eq 1 ]; then
		need "%database%"
	fi
	use dns
}

start() {
	ebegin "Starting bacula director"
	start-stop-daemon --start --quiet --exec /usr/sbin/bacula-dir \
		-- ${DIR_OPTIONS}
	eend $?
}

stop() {
	ebegin "Stopping bacula director"
	start-stop-daemon --stop --quiet --pidfile /var/run/bacula-dir.*.pid
	eend $?
}
