# $Header: /var/cvsroot/gentoo-x86/mail-mta/sendmail/files/sendmail,v 1.3 2004/12/07 01:59:31 g2boojum Exp $

depend() {
	need net
	use logger
	provide mta
}

start() {
	ebegin "Starting sendmail"
	/usr/bin/newaliases > /dev/null 2>&1
	(cd /var/spool/mqueue; rm -f xf*)
	/usr/sbin/sendmail ${SENDMAIL_OPTS} > /dev/null 2>&1
	/usr/sbin/sendmail -C /etc/mail/sendmail-slow.cf -q5m > /dev/null 2>&1
	/usr/sbin/sendmail ${CLIENTMQUEUE_OPTS} > /dev/null 2>&1
	eend $?
}

stop() {
	ebegin "Stopping sendmail"
	killall ${KILL_OPTS} sendmail
	eend $?
}
