# $Header: /var/cvsroot/gentoo-x86/app-misc/lcdproc/files/lcdproc,v 1.5 2003/01/07 16:58:28 aliz Exp $

start() {
	ebegin "Starting LCDProc"
	source /etc/lcdproc.conf
	ebegin "Starting lcdproc"
	/usr/bin/lcdproc -d ${SCREENS}
	eend $?
}

stop() {
	ebegin "Stopping LCDProc"
	killall lcdproc 
	eend $?
}
