# $Header: /var/cvsroot/gentoo-x86/app-misc/lcdproc/files/LCDd,v 1.1 2003/01/07 16:59:04 aliz Exp $

depend() {
	need net
}

start() {
	ebegin "Starting LCDd"
	/usr/sbin/LCDd -c /etc/LCDd.conf
	eend $?
}

stop() {
	ebegin "Stopping LCDd"
	killall LCDd
	eend $?
}
