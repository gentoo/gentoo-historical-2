#!/usr/bin/env bash
source /etc/make.conf 
echo -n "Source archive pruning started "
date
touch ${DISTDIR}/.cleaned 
sleep 3
for x in `find /usr/portage/ -iname *.ebuild` 
do
	ebuild ${x} touch
done
if [ ! -d ${DISTDIR}-old ]
then
	mkdir ${DISTDIR}-old
fi
cd ${DISTDIR}
for x in `find ! -newer .cleaned | grep ./` 
do
	mv $x ${DISTDIR}-old
done
du -k ${DISTDIR}
du -k ${DISTDIR}-old
echo -n "Source archive pruning completed "
date
