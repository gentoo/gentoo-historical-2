#!/bin/sh

prepallman
prepallinfo
prepallstrip

# Move aclocals

for i in `find ${D} -name "aclocal" -type d`
do
  if [ "$i" != "" ]
  then
    if [  "$i" != "${D}usr/share/aclocal" ]
    then
      echo $i
      install -d ${D}usr/share/aclocal
      mv ${i}/* ${D}usr/share/aclocal
      rm -fr ${i}
    fi
  fi
done


