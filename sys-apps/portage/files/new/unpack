#!/bin/bash
for x in "$@"
do
	echo ">>> Unpacking ${x}"
	case "${x##*.}" in
	gz|tgz|Z|z) 
		tar xzf ${DISTDIR}/${x}
		;;
	bz2|tbz2)
		cat ${DISTDIR}/${x} | bzip2 -d | tar xf -
		;;
	ZIP|zip)
		unzip ${DISTDIR}/${x}
		;;
	*)
		echo '!!!'" Error: couldn't unpack ${x}: file format not recognized"
		exit 1
		;;
	esac
done
