#!/bin/bash

z=`find ${D} -name "info" -type d`

for x in ${z} 
do
	rm -f ${x}/dir
	w=`echo ${x}/*.info*`
	if [ "${w}" != "${x}"'/*.info*' ]
	then
	for y in ${w}
	do
		if [ -h ${y} ]
	    	then
			#symlink
			linkto=`ls -l ${y} | sed -e "s:${D}::" | awk '{ printf ("%s.gz",$11) } '`
	        	echo "$linkto $y.gz"
			ln -sf ${linkto} ${y}.gz
			rm ${y}
	    	else
			gzip -f -9 ${y}
            	fi	
	done
	fi
done



