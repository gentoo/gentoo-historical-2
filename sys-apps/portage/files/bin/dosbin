#!/bin/bash
if [ ${#} -lt 1 ]
    then
	echo "${0}: at least one argument needed"
	return
    fi
    if [ ! -d ${D}${DESTTREE}/sbin ]
    then
	install -d ${D}${DESTTREE}/sbin
    fi
    for x in "$@"
    do
	if [ -x ${x} ]
	then
            if [ -z "$DEBUG" ]
            then
	        MYVAL=`file ${x} | grep "ELF"` 
	        if [ "$MYVAL" ]
	        then
		    strip ${x}
                fi
	    fi
	    install -m0754 ${x} ${D}${DESTTREE}/sbin
	else
	    echo "${0}: ${x} is not executable or does not exist"
	fi
    done

