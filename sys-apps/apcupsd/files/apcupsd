depend() {
	use logger dns
}

 
start() {
	rm -f /etc/apcupsd/powerfail
	ebegin "Starting APC UPS daemon"
	start-stop-daemon --start --quiet --exec /usr/sbin/apcupsd -- 1>&2
	eend $?
}
 
stop() {
	ebegin "Stopping APC UPS daemon"
	start-stop-daemon --stop --quiet --exec /usr/sbin/apcupsd -- 1>&2
	eend $?
} 
