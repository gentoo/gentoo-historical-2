depend() {
    need clock logger
}

start() {
    ebegin "Starting atd"
    start-stop-daemon --start --quiet --pidfile /var/run/atd.pid \
    	--startas /usr/sbin/atd
    eend $?
}

stop() {
    ebegin "Shutting down atd"
    start-stop-daemon --stop --quiet --pidfile /var/run/atd.pid
    eend $?
}

