# $Header: /var/cvsroot/gentoo-x86/sys-apps/usbd/files/usbd,v 1.4 2004/08/14 13:44:18 swegener Exp $

depend() {
	need localmount
}

start() {
	ebegin "Starting usb daemon"
	/usr/sbin/usbd
	eend $?
}

stop() {
	ebegin "Stopping usb daemon"
	killall /usr/sbin/usbd
	eend $?
}
