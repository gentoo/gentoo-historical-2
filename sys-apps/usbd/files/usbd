# $Header: /var/cvsroot/gentoo-x86/sys-apps/usbd/files/usbd,v 1.1.1.1 2005/11/30 09:56:57 chriswhite Exp $

depend() {
	need localmount
}

start() {
	ebegin "Starting usb daemon"
	/usr/sbin/usbd
	eend $?
}

stop() {
	ebegin "Stopping usb daemon"
	killall usbd
	eend $?
}
