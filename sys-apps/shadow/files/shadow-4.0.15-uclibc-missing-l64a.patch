@@ -14,6 +14,32 @@
 #include "prototypes.h"
 #include "defines.h"
 #include "getdef.h"
+
+#ifndef HAVE_A64L
+
+/*
+ * l64a - convert a long to a string of radix 64 characters
+ */
+
+char *
+l64a(long l)
+{
+	static	char	buf[8];
+	int	i = 0;
+
+	if (l < 0L)
+		return ((char *) 0);
+
+	do {
+		buf[i++] = i64c ((int) (l % 64));
+		buf[i] = '\0';
+	} while (l /= 64L, l > 0 && i < 6);
+
+	return (buf);
+}
+
+#endif /* !HAVE_A64L */
