start() {

	ebegin "Starting D-BUS system messagebus"

	start-stop-daemon --start --exec /usr/bin/dbus-daemon-1 -- --system

	eend $?

}

stop() {

	ebegin "Stopping D-BUS system messagebus"

	start-stop-daemon --stop --pidfile /var/run/dbus.pid 
	rm /var/run/dbus.pid

	eend $?

}
