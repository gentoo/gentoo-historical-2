# $Header: /var/cvsroot/gentoo-x86/sys-apps/hdparm/files/hdparm-init,v 1.3 2004/03/06 04:09:07 vapier Exp $

depend() {
	need localmount
}

start() {
	ebegin "Enabling DMA on IDE drives"
	/sbin/hdparm -d1 /dev/ide/hd/*u? &> /dev/null
	eend $?
}
