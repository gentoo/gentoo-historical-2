# $Header: /var/cvsroot/gentoo-x86/sys-apps/hdparm/files/hdparm-init,v 1.1 2002/08/15 20:13:52 azarah Exp $

depend() {
	need localmount
}

start() {
	ebegin "Enabling DMA on IDE drives"
	/sbin/hdparm -d1 /dev/ide/hd/*u? &> /dev/null
	eend
}

