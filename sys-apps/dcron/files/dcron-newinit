#!/sbin/runscript

SERVICE=dcron
EXE="/usr/sbin/crond"

start() {
		ebegin "Starting ${SERVICE}"
		start-stop-daemon --start --quiet --exec $EXE 1>&2
		eend $? "Error starting ${SERVICE}."
}

stop() {
		ebegin "Stopping ${SERVICE}"
		start-stop-daemon --stop --quiet -u root -n $SERVICE 1>&2
		eend $? "Error stopping ${SERVICE}."
}
