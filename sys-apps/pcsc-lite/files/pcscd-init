start() {
	# pcscd won't start if these exist
	rm -f /var/run/pcscd.{comm,pub}
	ebegin "Starting pcscd"
	/usr/sbin/pcscd ${PCSCD_OPTS}
	eend $?
}

stop() {
	ebegin "Stopping pcscd"
	start-stop-daemon --stop --quiet --exec /usr/sbin/pcscd
	eend $?
}
