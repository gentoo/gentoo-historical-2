depend() {
	need hald
}

start() {
	ebegin "Starting Automounter"
	start-stop-daemon --start --pidfile /var/lib/run/halevt/halevt.pid --exec /usr/bin/halevt -- -u root -g plugdev > /dev/null
	eend $?
}

stop() {
	ebegin "Stopping Automounter"
	start-stop-daemon --stop --pidfile /var/lib/run/halevt/halevt.pid
	eend $?
}
