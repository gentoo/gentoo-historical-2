#!/sbin/runscript

need() {
	clock localmount
}

start() {
	ebegin "Starting vcron"
	start-stop-daemon --start --quiet --exec /usr/bin/cron -- 1>&2 
	eend $? "Error starting vcron"
}

stop() {
	ebegin "Stopping vcron"
	start-stop-daemon --stop --quiet --exec /usr/bin/cron -- 1>&2
	eend $? "Error stopping vcron"
}
