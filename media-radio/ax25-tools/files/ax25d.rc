depend() {
	need net
}

start() {
	ebegin "Starting ax25d"
	start-stop-daemon --start --quiet --background --exec /usr/sbin/ax25d
	eend $?
}

stop() {
	ebegin "Stopping ax25d"
	start-stop-daemon --stop --quiet --exec /usr/sbin/ax25d
	eend $?
}
