depend() {
	need net
}

start() {
	ebegin "Starting netromd"
	start-stop-daemon --start --quiet --background --exec /usr/sbin/netromd
	eend $?
}

stop() {
	ebegin "Stopping netromd"
	start-stop-daemon --stop --quiet --exec /usr/sbin/netromd
	eend $?
}
