opts="start stop"

depend() {
	need net
	provide firewall
}

start() {
	ebegin "Starting FireHOL"
	/usr/sbin/firehol start 1>/dev/null
	eend $? 
}

stop() {
	ebegin "Stopping FireHOL"
	/usr/sbin/firehol stop 1>/dev/null
	eend $?
}

