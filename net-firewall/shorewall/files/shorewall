opts="start stop restart"

depend() {
	need net
	provide firewall
}

start() {
	ebegin "Starting firewall"
	/sbin/shorewall start 1>/dev/null
	eend $? 
}

stop() {
	ebegin "Stopping firewall"
	/sbin/shorewall stop 1>/dev/null
	eend $?
}

restart() {
	ebegin "Restarting firewall"
	/sbin/shorewall restart
	eend $?
}
