depend() {
	need net
	use logger
}

start() {
	ebegin "Starting git-daemon"
		start-stop-daemon --start --quiet --background \
		--exec /usr/bin/git-daemon -- ${GITDAEMON_OPTS}
	eend $?
}

stop() {
	ebegin "Stoping git-daemon"
		start-stop-daemon --stop --quiet --name git-daemon
	eend $?
}
