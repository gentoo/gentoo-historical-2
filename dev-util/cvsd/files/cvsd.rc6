depend() {
	need net
}

start() {
	ebegin "Starting cvsd"
	start-stop-daemon --start --quiet --background --exec /usr/sbin/cvsd
	eend $?
}

stop() {
	ebegin "Stopping cvsd"
	start-stop-daemon --stop --quiet --pidfile /var/run/cvsd.pid
	eend $?
}
