depend() {
	need net
}

start() {
	ebegin "Starting cvsupd"
	start-stop-daemon --start --quiet --background --exec /usr/bin/cvsupd \
		-- ${MYCVSUPD_OPTS}
	eend $? "Failed to start cvsupd"
}

stop() {
	ebegin "Stopping cvsupd"
	start-stop-daemon --stop --quiet --exec /usr/bin/cvsupd
	eend $? "Failed to stop cvsupd"
}
