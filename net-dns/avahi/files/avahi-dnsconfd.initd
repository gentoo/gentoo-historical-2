opts="${opts} reload"

depend() {
	need avahi-daemon
	use net
}

start() {
	ebegin "Starting avahi-dnsconfd"
	/usr/sbin/avahi-dnsconfd -D
	eend $?
}

stop() {
	ebegin "Stopping avahi-dnsconfd"
	/usr/sbin/avahi-dnsconfd -k
	eend $?
}

reload() {
	ebegin "Reloading avahi-dnsconfd"
	/usr/sbin/avahi-dnsconfd -r
	eend $?
}
