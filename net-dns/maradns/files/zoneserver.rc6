depend() {
	need net
}

start() {
	ebegin "Starting zoneserver"
	start-stop-daemon --start --quiet \
		--exec /usr/bin/duende /usr/sbin/zoneserver
	eend $?
}

stop() {
	ebegin "Stopping zoneserver"
	start-stop-daemon --stop --quiet --name zoneserver
	eend $?
}
