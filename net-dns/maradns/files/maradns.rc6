depend() {
	need net
	provide dns
}

start() {
	ebegin "Starting maradns"
	start-stop-daemon --start --quiet -b -m --pidfile /var/run/maradns.pid \
		--exec /usr/sbin/maradns
	eend $?
}

stop() {
	ebegin "Stopping maradns"
	start-stop-daemon --stop --quiet --pidfile /var/run/maradns.pid
	eend $?
}
