# $Header: /var/cvsroot/gentoo-x86/net-dns/dnrd/files/dnrd,v 1.2 2005/07/21 15:11:48 chriswhite Exp $

PIDFILE="/var/run/dnrd.pid"

depend() {
	provide dns
	need net
}

start() {
	ebegin "Starting dnrd"
	/usr/sbin/dnrd --uid dnrd $DNRD_OPTS &> /dev/null &
	eend $?
}

stop() {
	ebegin "Stopping dnrd"
	/usr/sbin/dnrd -k	
	eend $?
}

