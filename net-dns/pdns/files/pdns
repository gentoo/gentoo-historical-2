depend() {
	need net
}

start() {
	ebegin "Starting PowerDNS"
	start-stop-daemon --start --quiet --exec /usr/bin/env -- /usr/sbin/pdns_server --daemon --guardian=yes
	eend $?
}

stop() {
	ebegin "Stopping PowerDNS"
	start-stop-daemon --stop --quiet --pidfile=/var/run/pdns.pid
	eend $?
}
