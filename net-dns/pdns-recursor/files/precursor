# $Header: /var/cvsroot/gentoo-x86/net-dns/pdns-recursor/files/precursor,v 1.1 2006/04/30 00:14:42 swegener Exp $

depend() {
	need net
}

start() {
	ebegin "Starting PowerDNS Recursor"
	/usr/sbin/pdns_recursor --daemon &>/dev/null
	eend $?
}

stop() {
	ebegin "Stopping PowerDNS Recursor"
	/usr/sbin/rec_control quit &>/dev/null
	eend $?
}
