# $Header: /var/cvsroot/gentoo-x86/net-dns/dnsmasq/files/dnsmasq-init,v 1.1 2002/06/29 00:55:03 bangert Exp $

depend() {
	need net
}

start() {
	ebegin "Starting dnsmasq"
	start-stop-daemon --start --quiet --exec /usr/sbin/dnsmasq \
		-- -x /var/run/dnsmasq.pid ${DNSMASQ_OPTS}
	eend $?
}

stop() {
	ebegin "Stopping dnsmasq"
	start-stop-daemon --stop --quiet --pidfile /var/run/dnsmasq.pid
	eend $?
}
