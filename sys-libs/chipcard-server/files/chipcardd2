start() {
    ebegin "Starting chipcard2 daemon"
    start-stop-daemon --start --quiet --exec /usr/sbin/chipcardd2
    eend $?
}

stop() {
    ebegin "Stopping chipcard2 daemon"
    start-stop-daemon --stop --quiet --exec /usr/sbin/chipcardd2
    eend $?
}
