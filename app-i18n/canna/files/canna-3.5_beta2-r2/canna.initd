# CANNASERVER_OPTS is defined in /etc/conf.d/canna

start() {
	ebegin "Starting canna"
	/usr/sbin/cannaserver ${CANNASERVER_OPTS}
	eend $? "Failed to start canna"
}

stop() {
	ebegin "Stopping canna"
	/usr/bin/cannakill
	eend $? "Failed to stop canna"
}

