depend() {
	need net
	use cupsd
}

start() {
	ebegin "Starting arpwatch"
	if [ ! -e /var/arpwatch/arp.dat ]; then
		touch /var/arpwatch/arp.dat 
	fi
	/usr/sbin/arpwatch -i eth0 -f /var/arpwatch/arp.dat
	result=$?
	eend $result
}

stop() {
	ebegin "Stopping arpwatch"
	killall arpwatch > /dev/null
	result=$?
	eend $result
}
