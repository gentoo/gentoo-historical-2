depend() {
    need net
}

start() {
	ebegin "Starting netiathome"
	start-stop-daemon --start --background --quiet --exec /usr/sbin/NETIStart
	eend $?
}

stop() {
	ebegin "Stopping netiathome"
	start-stop-daemon --stop --quiet --exec /usr/bin/tethereal
	eend $?
}
