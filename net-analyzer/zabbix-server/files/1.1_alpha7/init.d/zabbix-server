#opts="${opts} reload"

depend() {
	need net
	use mysql postgresql
}

start() {
	ebegin "Starting Zabbix daemon"
	start-stop-daemon --start --exec /usr/sbin/zabbix_server
	eend
}
stop() {
	ebegin "Stopping Zabbix daemon"
	start-stop-daemon  --stop --pid $PID
	eend
}
