# $Header: /var/cvsroot/gentoo-x86/net-analyzer/zabbix-server/files/1.0/init.d/zabbix-suckerd,v 1.1.1.1 2005/11/30 10:12:11 chriswhite Exp $

opts="${opts} reload"

depend() {
	need net
	use mysql postgresql
}

start() {
	ebegin "Starting Zabbix suckerd"
	start-stop-daemon --start --exec /usr/sbin/zabbix_suckerd
	eend
}
stop() {
	ebegin "Stopping Zabbix suckerd"
	start-stop-daemon  --stop --pid $PID
	eend
}
