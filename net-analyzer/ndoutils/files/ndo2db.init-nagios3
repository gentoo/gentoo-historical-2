depends() {
	before nagios
	need mysql
}

start() {
	ebegin "Starting ndo2db"
	start-stop-daemon --start --quiet --exec /usr/bin/ndo2db-3x \
	-- -c /etc/nagios/ndo2db.cfg
	eend $?
}

stop() {
	ebegin "Stopping ndo2db"
	start-stop-daemon --stop --quiet --exec /usr/bin/ndo2db-3x
	eend $?
}
