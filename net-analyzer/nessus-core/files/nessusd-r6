# $Header: /var/cvsroot/gentoo-x86/net-analyzer/nessus-core/files/nessusd-r6,v 1.3 2004/03/04 18:59:33 vapier Exp $

depend() {
	need net
}

start() {
	ebegin "Starting nessusd"
	start-stop-daemon --start --quiet --exec /usr/sbin/nessusd -- -D
	eend $? 
}

stop() {
	ebegin "Stop nessusd"
	start-stop-daemon --stop --quiet --exec /usr/sbin/nessusd
	eend $?
}
