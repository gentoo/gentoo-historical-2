# $Header: /var/cvsroot/gentoo-x86/net-analyzer/nessus-core/files/nessusd-r6,v 1.2 2003/02/14 22:57:36 vapier Exp $

depend() {
	need net
}


start() {

		ebegin "Starting nessusd..."
     		start-stop-daemon --start --quiet --exec /usr/sbin/nessusd -- -D
		eend $? 
}

stop() {

		ebegin "Stop nessusd..."
     		start-stop-daemon --stop --quiet --exec /usr/sbin/nessusd
		eend $? 
}



