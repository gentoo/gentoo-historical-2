start() {
	ebegin "Starting msfweb"
	start-stop-daemon --start --quiet --exec /usr/bin/msfweb \
		-- ${MSF_OPTS} >/dev/null 2>&1 &
	echo $! > ${PIDFILE}
	eend $?
}

stop() {
	ebegin "Stopping msfweb"
	start-stop-daemon --stop --quiet --pidfile ${PIDFILE}
	rm -f ${PIDFILE}
	eend $?
}
