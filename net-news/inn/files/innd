depend() {
	need net
}

start() {
	ebegin "Starting innd"
	su - news -c /usr/lib/news/bin/rc.news
	eend $?
}

stop() {
	ebegin "Stopping innd"
	su - news -c '/usr/lib/news/bin/rc.news stop'
	eend $?
}
