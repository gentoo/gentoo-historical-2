depend() {
	need net
}

start() {
	ebegin "Starting innd"
	start-stop-daemon --start --quiet --chuid news:news --exec /usr/lib/news/bin/innd
	eend $?
}

stop() {
	ebegin "Stopping innd"
	start-stop-daemon --stop --quiet --pidfile /var/run/innd.pid
	eend $?
}
