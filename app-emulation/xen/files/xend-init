opts="start stop status restart"

depend() {
	need net
	before xendomain
}

await_daemons_up() {
	for ((i=0; i<5; i++)); do
		sleep 1
		/usr/sbin/xend status && return 0
	done
	return 1
}

start() {
	ebegin "Starting Xen control daemon"
	/usr/sbin/xend start
	/usr/sbin/xend status || await_daemons_up
	eend $?
}

stop() {
	if [ "$(xm list | wc -l)" -gt 2 ]; then
		ebegin "  Stopping all domain"
		/usr/sbin/xm shutdown --all --halt --wait >/dev/null
		eend $?
	fi

	ebegin "Stopping Xen control daemon"
	/usr/sbin/xend stop
	eend $?
}

status() {
	/usr/sbin/xend status
}
